html
    include ../shared/includes/head.pug
    style
        include ../../public/styles/admin/login.css
    main
        body
            form(action="/admin-login" method="POST")
                h1 Log-in
                input(type="text" placeholder="ID" name="userid" required)
                input(type="text" placeholder="dd/mm/yyyy" name="birthdate" required)
                input(type="password" placeholder="Password" name="secret" required)
                button Enter
            script(src="scripts/admin/login.js")